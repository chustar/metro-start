!!!
%html{"lang" => "en"}
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %link{:href => "css/reset.css", :rel => "stylesheet", :type => "text/css"}/
    %link{:href => "css/style.css", :rel => "stylesheet", :type => "text/css"}/
    %link{:href => "css/spectrum.css", :rel => "stylesheet"}/
    %title start
      
  %body.background-color
    %h1.title-color start here . . .
    .pages-chooser
      %select#pages-chooser.chooser
        %option.clickable.todos-option todos
        %option.clickable.sessions-option sessions
        %option.clickable.apps-option apps
        %option.clickable.bookmarks-option bookmarks
        %option.clickable.themes-option themes

    .external
      .internal
        .todos.collection
          #todos
            .options-color.option.sort
              %select#todos-sort-chooser.chooser
                %option.clickable
                  unsorted
                %option.clickable
                  sorted
            #external_selector_todos.external_selector
              #internal_selector_todos.internal_selector
            %form#addTodo.add.option
              %input#newTodo.option{:name => "newTodo", :placeholder => "new todo", :size => "26", :type => "text"}/
              %input.options-color.option{:type => "submit", :value => "save"}/

        .sessions.collection
          #sessions
            .options-color.option.sort
              %select#sessions-sort-chooser.chooser
                %option.clickable
                  unsorted
                %option.clickable
                  sorted
            #external_selector_sessions.external_selector
              #internal_selector_sessions.internal_selector

        .apps.collection
          #apps
            .options-color.option.sort
              %select#apps-sort-chooser.chooser
                %option.clickable
                  unsorted
                %option.clickable
                  sorted
            #external_selector_apps.external_selector
              #internal_selector_apps.internal_selector

        .bookmarks.collection
          #bookmarks
            .options-color.option.sort
              %select#bookmarks-sort-chooser.chooser
                %option.clickable
                  unsorted
                %option.clickable
                  sorted
            #external_selector_bookmarks.external_selector
              #internal_selector_bookmarks.internal_selector

        .themes.collection
          #themes
            .options-color.option.sort
              %select#themes-sort-chooser.chooser
                %option.clickable
                  unsorted
                %option.clickable
                  sorted
            #external_selector_themes.external_selector
              #internal_selector_themes.internal_selector

    .weather
      #toggleWeather.options-color.option.clickable
      #weather.hide
        #city
        %div
          %input#newLocation.option{:placeholder => "vancouver, bc", :size => "14", :type => "text"}/
          %span#saveLocation.options-color.option.clickable save
        .options-color.option
          %select#weather-unit-chooser.chooser
            %option.clickable fahrenheit
            %option.clickable celsius
        %p#temp
          %span#currentTemp>
          Â°
          %span#unit.options-color
          \/
          %span#highTemp
          %span.options-color hi
          \/
          %span#lowTemp
          %span.options-color lo
        %p#condition

    .footer
      %p#wrench.options-color.wrench.clickable wrench
      %p#editThemeButton.option.options-color.clickable.theme-button edit theme

    #themeEditor
      %h3.title-color theme editor
      .picker
        .theme-section-title font options
        .theme-editor-section.options-color
          %select#font-chooser.chooser
            %option.clickable system
            %option.clickable raleway
            %option.clickable custom

        .theme-editor-section
          #default.font-chooser-section
          #raleway.font-chooser-section
          #custom.theme-editor-border.font-chooser-section
            .theme-section-title font style options
            %table.metro-table
              %tbody
                %tr
                  %td
                    %span.small-text readability aid
                  %td
                    .options-color
                      %select#fontreadability-chooser.chooser
                        %option.clickable on
                        %option.clickable off

                %tr
                  %td
                    %span.small-text family
                  %td
                    .options-color
                      %select#fontfamily-chooser.chooser
                        %option.clickable system
                        %option.clickable raleway

                %tr
                  %td
                    %span.small-text weight
                  %td
                    .options-color
                      %select#fontweight-chooser.chooser
                        %option.clickable normal
                        %option.clickable lighter
                        %option.clickable bolder

                %tr
                  %td
                    %span.small-text variant
                  %td
                    .options-color
                      %select#fontvariant-chooser.chooser
                        %option.clickable normal
                        %option.clickable small-caps

        .theme-section-title color palette options
        .theme-editor-section.options-color
          %select#palette-chooser.chooser
            %option.clickable automatic
            %option.clickable custom

        .theme-editor-section
          #automatic.theme-editor-border.palette-chooser-section
            .theme-section-title automatic color options
            %div
              %span.small-text base
              %input#baseColor{:size => "9", :type => "text"}/

          #custom.theme-editor-border.palette-chooser-section
            .theme-section-title custom color options
            %div
              %span.small-text title
              %input#titleColor{:size => "9", :type => "text"}/
            %div
              %span.small-text main
              %input#mainColor{:size => "9", :type => "text"}/
            %div
              %span.small-text options
              %input#optionsColor{:size => "9", :type => "text"}/
            %div
              %span.small-text background
              %input#backgroundColor{:size => "9", :type => "text"}/

        .theme-section-title background options
        .theme-editor-section.options-color
          %select#background-chooser.chooser.theme-editor-section
            %option.clickable trianglify
            %option.clickable none

        .theme-editor-section
          #none.background-chooser-section
          #trianglify.theme-editor-border.background-chooser-section
            .theme-section-title trianglify options
            %table.metro-table
              %tbody
                %tr
                  %td
                    %span.small-text style
                  %td
                    .options-color
                      %select#tristyle-chooser.chooser
                        %option.clickable Triad
                        %option.clickable Tetrad
                        %option.clickable Monochromatic
                        %option.clickable Split Complements

                %tr
                  %td
                    %span.small-text size
                  %td
                    .options-color
                      %select#trisize-chooser.chooser
                        %option.clickable small
                        %option.clickable medium
                        %option.clickable large

                %tr
                  %td
                    %span.small-text variance
                  %td
                    .options-color
                      %select#trivariance-chooser.chooser
                        %option.clickable uniform
                        %option.clickable bent
                        %option.clickable freeform

        .theme-section-title author info
        .theme-editor-section
          #author.theme-editor-border
            %table.metro-table
              %tbody
                %tr
                  %td
                    %span.small-text title
                  %td
                    %input#title{:size => "20", :type => "text"}/
                %tr
                  %td
                    %span.small-text author
                  %td
                    %input#author{:size => "20", :type => "text"}/

    // Rule to hide all options when page first loads.
    // Removes option elements added after the calls to hide .option were made.
    %style#hideRule{:type => "text/css"}
      \.option {
      display: none;
      }

      \/* Remove extra space that was added for sorting. */
      \.external_selector {
      height: 100%;
      }
      
      \#external_selector_todos {
      height: 100%;
      }

    %script{:src => "metro-start.js"}
